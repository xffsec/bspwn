! --------------------------
! Keyboard Shortcuts (Translations) - FIXED
! --------------------------
XTerm*VT100.Translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Shift <Key>Insert: insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>Insert: insert-selection(CLIPBOARD) \n\
    ~Shift~Ctrl<Btn2Up>: insert-selection(PRIMARY, CUT_BUFFER0) \n\
    Meta <Key>BackSpace: string(0x7f) \n\
    Meta <Key>Delete: string(0x7f) \n\
    Ctrl Shift <Key>Up: scroll-back(1,line) \n\
    Ctrl Shift <Key>Down: scroll-forw(1,line) \n\
    Ctrl Shift <Key>Page_Up: scroll-back(1,halfpage) \n\
    Ctrl Shift <Key>Page_Down: scroll-forw(1,halfpage) \n\
    Ctrl Shift <Key>Home: scroll-to(begin) \n\
    Ctrl Shift <Key>End: scroll-to(end) \n\
    Ctrl Shift <Key>minus: smaller-vt-font() \n\
    Ctrl Shift <Key>plus: larger-vt-font() \n\
    Ctrl Shift <Key>0: set-vt-font(d) \n\
    Ctrl Shift <Key>Q: quit()

UXTerm*VT100.Translations: #override \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD) \n\
    Shift <Key>Insert: insert-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>Insert: insert-selection(CLIPBOARD) \n\
    ~Shift~Ctrl<Btn2Up>: insert-selection(PRIMARY, CUT_BUFFER0) \n\
    Meta <Key>BackSpace: string(0x7f) \n\
    Meta <Key>Delete: string(0x7f) \n\
    Ctrl Shift <Key>Up: scroll-back(1,line) \n\
    Ctrl Shift <Key>Down: scroll-forw(1,line) \n\
    Ctrl Shift <Key>Page_Up: scroll-back(1,halfpage) \n\
    Ctrl Shift <Key>Page_Down: scroll-forw(1,halfpage) \n\
    Ctrl Shift <Key>Home: scroll-to(begin) \n\
    Ctrl Shift <Key>End: scroll-to(end) \n\
    Ctrl Shift <Key>minus: smaller-vt-font() \n\
    Ctrl Shift <Key>plus: larger-vt-font() \n\
    Ctrl Shift <Key>0: set-vt-font(d) \n\
    Ctrl Shift <Key>Q: quit()



